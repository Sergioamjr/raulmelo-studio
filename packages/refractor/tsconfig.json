{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
  },
  "exclude": [
    "dist",
    "node_modules",
    "vite.config.ts"
  ]
}