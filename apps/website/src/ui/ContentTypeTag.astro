---
import { mergeClasses } from '@/infrastructure/utils/misc';

export type Props = {
  type: 'post' | 'til' | 'codeSnippet';
};

const { type } = Astro.props;
---

<span
  class={mergeClasses(
    {
      'bg-indigo-600': type === `post`,
      'bg-yellow-600': type === `til`,
      'bg-lime-600': type === `codeSnippet`,
    },
    `px-2 rounded-sm min-w-[40px] text-center font-bold text-gray-50 uppercase`,
  )}
>
  {type}
</span>
